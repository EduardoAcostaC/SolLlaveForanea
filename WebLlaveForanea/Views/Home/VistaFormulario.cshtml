
@{
    ViewBag.Title = "VistaFormulario";
}


<h1 class="display-2">Formulario Mascotas</h1>

@if (TempData["verificacion"] != null)
{
    <div class="alert alert-warning mt-3">
        @TempData["verificacion"]
    </div>
}

<form class="mt-3" action="/Home/FormularioPOST" method="post">
    <label class="form-label">Nombre</label>
    @*<input class="form-control" type="text" name="nombre" />*@
    @Html.TextBox("nombre", null, new {@class ="form-control"})

    <br />

    <label class="form-label">Edad</label>
    <input class="form-control" type="text" name="edad" />
    <br />

    <label class="form-label">Precio</label>
    <input class="form-control" type="text" name="precio" />
    <br />

    <label class="form-label">Especie</label>
    @Html.DropDownList("especieId", null, "Seleccionar", new { @class = "form-control" })
    <br />

    <input type="submit" class="btn btn-success" value="Guardar" />
    <a href="~/Home/Index" class="btn btn-primary"> Regresar </a>

</form>